<div class="space-y-6">
  <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Companies Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-blue-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Companies</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @companies_count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "View all", companies_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
      </div>
    </div>

    <!-- Contacts Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-green-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Contacts</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @contacts_count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "View all", contacts_path, class: "text-sm font-medium text-green-600 hover:text-green-500" %>
      </div>
    </div>

    <!-- Deals Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-yellow-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Deals</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @deals_count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "View all", deals_path, class: "text-sm font-medium text-yellow-600 hover:text-yellow-500" %>
      </div>
    </div>

    <!-- Activities Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-purple-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Activities</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @activities_count %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "View all", activities_path, class: "text-sm font-medium text-purple-600 hover:text-purple-500" %>
      </div>
    </div>
  </div>

  <!-- Deal Value Cards -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <h3 class="text-lg font-medium text-gray-900">Total Deal Value</h3>
        <p class="text-3xl font-bold text-blue-600 mt-2">$<%= number_with_precision(@total_deal_value, precision: 2, delimiter: ',') %></p>
      </div>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <h3 class="text-lg font-medium text-gray-900">Won Deals Value</h3>
        <p class="text-3xl font-bold text-green-600 mt-2">$<%= number_with_precision(@won_deals_value, precision: 2, delimiter: ',') %></p>
      </div>
    </div>
  </div>

  <!-- Recent Items -->
  <div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
    <!-- Recent Companies -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Companies</h3>
        <div class="flow-root">
          <ul class="-my-5 divide-y divide-gray-200">
            <% if @recent_companies.any? %>
              <% @recent_companies.each do |company| %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate"><%= company.name %></p>
                      <p class="text-sm text-gray-500 truncate"><%= company.email %></p>
                    </div>
                    <div>
                      <%= link_to "View", company, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200" %>
                    </div>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="py-4 text-center text-gray-500">No companies yet</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <!-- Recent Contacts -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Contacts</h3>
        <div class="flow-root">
          <ul class="-my-5 divide-y divide-gray-200">
            <% if @recent_contacts.any? %>
              <% @recent_contacts.each do |contact| %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate"><%= contact.full_name %></p>
                      <p class="text-sm text-gray-500 truncate"><%= contact.email %></p>
                    </div>
                    <div>
                      <%= link_to "View", contact, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200" %>
                    </div>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="py-4 text-center text-gray-500">No contacts yet</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Deals and Pending Activities -->
  <div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
    <!-- Recent Deals -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Deals</h3>
        <div class="flow-root">
          <ul class="-my-5 divide-y divide-gray-200">
            <% if @recent_deals.any? %>
              <% @recent_deals.each do |deal| %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate"><%= deal.title %></p>
                      <p class="text-sm text-gray-500">
                        <%= deal.stage.titleize %> - $<%= number_with_precision(deal.amount, precision: 2, delimiter: ',') %>
                      </p>
                    </div>
                    <div>
                      <%= link_to "View", deal, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-yellow-700 bg-yellow-100 hover:bg-yellow-200" %>
                    </div>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="py-4 text-center text-gray-500">No deals yet</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <!-- Pending Activities -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Pending Activities</h3>
        <div class="flow-root">
          <ul class="-my-5 divide-y divide-gray-200">
            <% if @pending_activities.any? %>
              <% @pending_activities.each do |activity| %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate"><%= activity.activity_type.titleize %></p>
                      <p class="text-sm text-gray-500 truncate"><%= activity.description.truncate(50) %></p>
                      <% if activity.due_date %>
                        <p class="text-xs text-gray-400">Due: <%= activity.due_date.strftime("%B %d, %Y") %></p>
                      <% end %>
                    </div>
                    <div>
                      <%= link_to "View", activity, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-purple-700 bg-purple-100 hover:bg-purple-200" %>
                    </div>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="py-4 text-center text-gray-500">No pending activities</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
